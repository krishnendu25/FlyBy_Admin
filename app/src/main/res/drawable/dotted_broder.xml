<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="-1dp"
        android:left="-1dp"
        android:right="-1dp"
        android:top="-1dp">

        <shape android:shape="rectangle">

            <solid android:color="@color/background_base" />

            <stroke
                android:width="3dp"
                android:color="#5C5C5C"
                android:dashWidth="3dp"
                android:dashGap="5dp" />
            <corners
                android:radius="10dp"/>

        </shape>
    </item>
</layer-list>