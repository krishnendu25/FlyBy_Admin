<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_base"
    tools:context="com.flybyadmin.View.UI.OnBoarding_Step_3">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="?actionBarSize"
        android:orientation="vertical">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="#010102">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/ACTIVITY_TITEL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/manropeextrabold"
                    android:text="Onboard New Store"
                    android:textColor="@color/white"
                    android:textSize="18dp" />


            </LinearLayout>


            <Button
                android:id="@+id/add_next_btn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="25dp"
                android:background="@drawable/green_btn_ripple"
                android:fontFamily="@font/blackhansansregular"
                android:gravity="start|center"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="  Cancel  "
                android:textColor="@color/white"
                android:textSize="16dp" />


        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/light_green"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="27dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manropebold"
                    android:text="STEP 3 - Store Location"
                    android:textColor="@color/light_green"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manropebold"
                    android:text="Store State "
                    android:layout_marginTop="20dp"
                    android:textColor="@color/white_off"
                    android:textSize="16sp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/state_ed"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:hint="Select Your State"
                        android:textColorHint="@color/white_off"
                        android:background="@drawable/edittext_bg"
                        android:paddingStart="10dp"
                        android:gravity="center|start"
                        android:textColor="@color/white_off"
                        android:textSize="16dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp"
                        android:rotation="90"
                        android:src="@drawable/ic_nextgreen"/>

                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manropebold"
                    android:text="@string/store_address"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white_off"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/addressTV"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_bg"
                    android:inputType="textPersonName"
                    android:paddingStart="10dp"
                  android:padding="10dp"
                    android:gravity="start|top"
                    android:textColor="@color/white_off"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manropebold"
                    android:text="Store Lat Long"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white_off"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/getLatLong"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/base_btn_ripple"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    android:gravity="center"
                    android:fontFamily="@font/manropebold"
                    android:text="Get Current Location"
                    android:textColor="@color/light_green"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/latitutd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manropebold"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white_off"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/longituted"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manropebold"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white_off"
                    android:textSize="16sp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/nextLayout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentBottom="true"
        android:background="@drawable/green_btn_ripple_botton"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:drawablePadding="5dp"
            android:fontFamily="@font/blackhansansregular"
            android:gravity="center"
            android:text="NEXT"
            android:textAllCaps="true"
            android:textColor="@color/background_base"
            android:textSize="16dp" />
    </RelativeLayout>
</RelativeLayout>